@model DDSDemoDAL.Employee

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this Employee's Users?</h2>

<h4>
    Employee: 
    @Html.DisplayFor(model => model.FirstName)
    @Html.DisplayFor(model => model.LastName)
</h4>

<div>
    <hr />

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>

        <p> </p>

        <div>
            @Html.ActionLink("Back to Users", "Users/" + Model.ID, new { page = ViewBag.CurrentPage, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"], sortBy = Request.QueryString["sortBy"] })
        </div>
    }
</div>
