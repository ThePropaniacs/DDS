@model IEnumerable<DDSDemoDAL.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Employees</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Company Name")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            Sun.
        </th>
        <th>
            Mon.
        </th>
        <th>
            Tue.
        </th>
        <th>
            Wed.
        </th>
        <th>
            Thu.
        </th>
        <th>
            Fri.
        </th>
        <th>
            Sat.
        </th>
        <th>
            Avail. Notes
        </th>
        <th>
            Avail. Start
        </th>
        <th>
            Avail. Expires
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr
            onclick="location.href = '@(Url.Action("Edit", "Employees", new { id = item.ID }))'">
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @{
                    if (item.Sun == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Mon == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Tue == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Wed == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Thu == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Fri == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>

                @{
                    if (item.Sat == true)
                    {
                        <p>True</p>
                    }
                    else
                    {
                        <p>False</p>
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailNotes)
            </td>
            <td>
                @(item.AvailStart.HasValue ? item.AvailStart.Value.ToShortTimeString() : "--")
            </td>
            <td>
                @(item.AvailExpires.HasValue ? item.AvailExpires.Value.ToShortTimeString() : "--")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Users", "Users", new { id = item.ID}) 
            </td>
        </tr>
    }

</table>
