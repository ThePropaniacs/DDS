@model DDSDemo.Models.EmployeeUsersViewModel

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<h4>
    Employee: 
    @Html.DisplayFor(model => model.Employee.FirstName)
    @Html.DisplayFor(model => model.Employee.LastName)
</h4>

<p>
    @Html.ActionLink("Add User", "AddUser", new { id = Model.Employee.ID, page = ViewBag.CurrentPage, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"], sortBy = Request.QueryString["sortBy"] }) |
    @Html.ActionLink("Delete All Users", "Delete", new { id = Model.Employee.ID, page = ViewBag.CurrentPage, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"], sortBy = Request.QueryString["sortBy"] })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
           @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Phone")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Users)
    {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.ActionLink("Forgot Password", "ForgotPassword", "Account", new { email = item.Email },  returnURL = Request.RawUrl.ToString() }, null) |
                @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id, page = ViewBag.CurrentPage, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"], sortBy = Request.QueryString["sortBy"] })
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Employees", "Index", new { page = ViewBag.CurrentPage, searchBy = Request.QueryString["searchBy"], search = Request.QueryString["search"], sortBy = Request.QueryString["sortBy"] })
</div>