@model IPagedList<DDSDemoDAL.TimeSheet>

@using PagedList;
@using PagedList.Mvc;


@{
    ViewBag.Title = "EmployeeIndex";
}

<h2>EmployeeIndex</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Client
        </th>
        <th>
           Start Time
        </th>
        <th>
            Stop Time
        </th>
        <th>
            Elapsed Time
        </th>
        <th>
            Note
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Client.CompanyName)
        </td>
        <td>
            @(item.StartTime.HasValue ? item.StartTime.Value.ToShortTimeString() : "--")
        </td>
        <td>
            @(item.StopTime.HasValue ? item.StopTime.Value.ToShortTimeString() : "--")
        </td>
        <td>
            @item.ElapsedTime.ToString(@"hh\:mm\:ss")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("Details", "EmployeeDetails", new { id=item.ID }) 
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("EmployeeIndex", new { page }))
