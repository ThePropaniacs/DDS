@model DDSDemoDAL.TimeSheet

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete this Timesheet?</h2>

<div>
    <h4>Timesheet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Company Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Client.CompanyName)
        </dd>

        <dt>
            @Html.DisplayName("Employee Name:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>

        <dt>
            @Html.DisplayName("Start Time:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayName("Stop Time:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StopTime)
        </dd>

        <dt>
            @Html.DisplayName("Note:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

        <dt>
            @Html.DisplayName("Approved:")
        </dt>

        <dd>
            @if (Model.Approved == true)
            {
                <text>True</text>
            }
            @if (Model.Approved == false)
            {
                <text>False</text>
            }
            @if (Model.Approved == null)
            {
                <text>Not Selected</text>
            }
        </dd>

        <dt>
            @Html.DisplayName("Approved Date:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApprovedDate)
        </dd>

        <dt>
            @Html.DisplayName("Processed:")
        </dt>

        <dd>
            @if (Model.Processed == true)
            {
                <p>True</p>
            }
            @if (Model.Processed == false)
            {
                <p>False</p>
            }
            @if (Model.Processed == null)
            {
                <p>Not Selected</p>
            }
        </dd>



    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>

        <p> </p>

        <div>
            @Html.ActionLink("Back to Timesheets", "Index", new { page = ViewBag.CurrentPage, searchBy = ViewBag.searchBy, search = ViewBag.search, sortBy = ViewBag.sortBy })
        </div>
    }
</div>
