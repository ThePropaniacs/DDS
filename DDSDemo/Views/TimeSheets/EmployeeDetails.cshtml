@model DDSDemoDAL.TimeSheet

@{
    ViewBag.Title = "EmployeeDetails";
}

<h2>Details</h2>

<div>
    <h4>TimeSheet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Client:")
        </dt>

        <dd>
            @Model.Client.CompanyName
        </dd>

        <dt>
            @Html.DisplayName("Start Time:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartTime)
        </dd>

        <dt>
            @Html.DisplayName("Stop Time:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StopTime)
        </dd>

        <dt>
            @Html.DisplayName("Note:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Note)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to TimeSheets", "EmployeeIndex")
</p>
