@model IPagedList<DDSDemo.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

@using PagedList;
@using PagedList.Mvc;

<h2>Administrators</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { page = Model.PageNumber })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("Email")
        </th>
        <th>
            @Html.DisplayName("Phone")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    
       
            <tr
               onclick="location.href = '@(Url.Action("Edit", "Admin", new { id = item.Id, page = Model.PageNumber }))'">

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id, page = Model.PageNumber }) |
                    @Html.ActionLink("Forgot Password", "ForgotPassword", "Account", new { email = item.Email, returnURL = Request.RawUrl.ToString() }, null) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, page = Model.PageNumber })
                </td>
            </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
